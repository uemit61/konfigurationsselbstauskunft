# Blockiere nur GET-Anfragen mit Query-Parametern (z. B. ?param=value)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{QUERY_STRING} .+ [NC]
    RewriteCond %{REQUEST_METHOD} GET
    RewriteRule .* - [F]
   
</IfModule>

